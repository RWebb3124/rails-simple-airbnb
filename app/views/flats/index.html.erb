<div class="navbar bg-light p-2">
  <a href="/flats" id="logo-text">Simple Airbnb</a>
  <div class="d-flex">
    <form class="d-flex my-2 my-lg-0">
      <input class="form-control mx-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success me-2" type="submit">Search</button>
    </form>
    <a href="flats/new" class="btn btn-outline-primary">Add flat</a>
  </div>
</div>
<div class="container mt-3">
  <h2 class="mt-3">All <%= @flats.length %> flats</h2>
  <br>
  <div class="row justify-content-between">
    <% @flats.each do |flat| %>
      <div class="card col-md-4 g-4" style="width: 18rem;">
        <img class="card-img-top w-100" src="https://picsum.photos/200" alt=<%= flat.name %>>
        <div class="card-body bg-light">
          <h4 class="card-title"><%= flat.name %></h4>
          <p class="card-text"><%= flat.address %></p>
          <p><i class="fa-solid fa-users"></i> <%= flat.number_of_guests%>
          <i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></p>
        </div>
        <div class="card-body border-top">
          <a href="#" class="card-link">More info</a>
          <a href="#" class="card-link text-success">Edit</a>
          <a href="#" class="card-link text-danger">Remove</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
